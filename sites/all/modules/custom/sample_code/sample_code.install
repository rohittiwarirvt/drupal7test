<?php



function scratchpad_update_7000() {
  if (!field_info_field(PARAGRAPH_ITEM_IMAGE_STYLE)) {
    $field = array(
        'field_name' => PARAGRAPH_ITEM_IMAGE_STYLE,
        'required' => false,
        'type' => 'list_text' ,
        'settings' => array(
          'allowed_values_function' => '_custom_image_styles',
         )
        );
     field_create_field($field);
   }


  $field_instance = array(
    'field_name' => PARAGRAPH_ITEM_IMAGE_STYLE,
    'label' => 'Specify Image styles for the paragraphs items',
    'entity_type' => 'paragraphs_item',
    'bundle' => 'image_text'
  );

  field_create_instance($field_instance);
}

/**
 * Implements hook_uninstall()
 *
 */
function sample_code_uninstall() {
  if (field_info_field(PARAGRAPH_ITEM_IMAGE_STYLE)) {
    field_delete_field(PARAGRAPH_ITEM_IMAGE_STYLE);
    watchdog('scratchpad', 'field image has been successfully deleted', array(), WATCHDOG_NOTICE);
  }

  drupal_uninstall_schema('contact_v1');
}




