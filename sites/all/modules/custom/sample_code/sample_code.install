/**
 * implements hook_enable()
 *
 */

function sample_code_enable() {
  if (!field_info_field(FIELD_IMAGE_STYLE_OPTIONS)) {
    $field = array(
        'field_name' => FIELD_IMAGE_STYLE_OPTIONS,
        'required' => TRUE,
        'type' => 'list_text' ,
        'settings' => array(
          'allowed_values_function' => '_custom_image_styles',
          'allowed_values' => array(
            'no_image' => 'No Image'
            ),
        )
    );

     field_create_field($field);
   }


  $field_instance = array(
    'field_name' => FIELD_IMAGE_STYLE_OPTIONS,
    'label' => 'Specify Image styles for the paragraphs items image',
    'entity_type' => 'node',
    'bundle' => BUNDLE_ARTICLE,
    'required' => TRUE,
    'default_value' => array(
        0 => array(
          'value' => 'thumbnail'
        )
     )
  );

  field_create_instance($field_instance);

  drupal_set_message(t('Successfully created field @field_name and added it to @paragraph_bundle ', array('@field_name' => FIELD_IMAGE_STYLE_OPTIONS, '@node_bundle' => BUNDLE_ARTICLE))) ;
}
